{
  "extends": [
    "stylelint-config-recommended"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "apply",
          "tailwind",
          "plugin",
          "custom-variant",
          "theme"
        ]
      }
    ],
    "at-rule-no-deprecated": [
      true,
      {
        "ignoreAtRules": [
          "apply"
        ]
      }
    ],
    "block-no-empty": null,
    "declaration-property-unit-allowed-list": null,
    "selector-class-pattern": null
  }
}
