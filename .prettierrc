{
  "singleQuote": true,
  "useTabs": false,
  "printWidth": 80,
  "tabWidth": 2,
  "bracketSameLine": false,
  "arrowParens": "always",
  "trailingComma": "all",
  "semi": false,
  "importOrder": [
    "^react$",
    "^react-(.*)$",
    "^next$",
    "^next/(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@prisma$",
    "^@prisma-rw$",
    "^@prisma-rw-build$",
    "^@auth$",
    "^@auth-client$",
    "^@trigger$",
    "^@helpers/(.*)$",
    "^@components/(.*)$",
    "^@db/(.*)$",
    "^@hooks/(.*)$",
    "^@store/(.*)$",
    "^[./]"
  ],
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ]
}
